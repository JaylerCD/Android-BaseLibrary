<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--圆型图片控件-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--上滑动控件-->
    <declare-styleable name="SlideDetailsLayout">
        <!-- float value for indicate the moment of switch panel-->
        <attr name="percent" format="float"/>
        <!-- how long the animation keep-->
        <attr name="duration" format="integer"/>
        <!-- default panel to show after init-->
        <attr name="default_panel" format="enum">
            <enum name="front" value="0"/>
            <enum name="behind" value="1"/>
        </attr>
    </declare-styleable>

    <!--Dialog-->
    <style name="CustomDialogAnimationDefaultIn" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_default_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_default_out</item>
    </style>
    <!--Dialog透明度从无到有进入动画时间为200毫秒-->
    <style name="DialogAnimationAlphaInTime200" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_0_to_1_time_200</item>
        <item name="android:windowExitAnimation">@anim/alpha_1_to_0_time_200</item>
    </style>
    <!--Dialog透明度从无到有进入动画时间为400毫秒-->
    <style name="DialogAnimationAlphaInTime400" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_0_to_1_time_400</item>
        <item name="android:windowExitAnimation">@anim/alpha_1_to_0_time_400</item>
    </style>
    <!--Dialog透明度从无到有进入动画时间为600毫秒-->
    <style name="DialogAnimationAlphaInTime600" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_0_to_1_time_600</item>
        <item name="android:windowExitAnimation">@anim/alpha_1_to_0_time_600</item>
    </style>


    <!--Dialog右边边进入动画时间为200毫秒-->
    <style name="DialogAnimationRightInTime200" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_x_1_to_0_time_200</item>
        <item name="android:windowExitAnimation">@anim/translate_x_0_to_1_time_200</item>
    </style>

    <!--Dialog右边边进入动画时间为400毫秒-->
    <style name="DialogAnimationRightInTime400" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_x_1_to_0_time_400</item>
        <item name="android:windowExitAnimation">@anim/translate_x_0_to_1_time_400</item>
    </style>


    <!--Dialog右边边进入动画时间为600毫秒-->
    <style name="DialogAnimationRightInTime600" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_x_1_to_0_time_600</item>
        <item name="android:windowExitAnimation">@anim/translate_x_0_to_1_time_600</item>
    </style>


    <!--Dialog左边进入动画时间为200毫秒-->
    <style name="DialogAnimationLeftInTime200" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_x_n1_to_0_time_200</item>
        <item name="android:windowExitAnimation">@anim/translate_x_0_to_n1_time_200</item>
    </style>

    <!--Dialog左边进入动画时间为400毫秒-->
    <style name="DialogAnimationLeftInTime400" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_x_n1_to_0_time_400</item>
        <item name="android:windowExitAnimation">@anim/translate_x_0_to_n1_time_400</item>
    </style>

    <!--Dialog左边进入动画时间为200毫秒-->
    <style name="DialogAnimationLeftInTime600" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_x_n1_to_0_time_600</item>
        <item name="android:windowExitAnimation">@anim/translate_x_0_to_n1_time_600</item>
    </style>


    <!--Dialog顶部进入动画时间为200毫秒-->
    <style name="DialogAnimationTopInTime200" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_y_n1_to_0_time_200</item>
        <item name="android:windowExitAnimation">@anim/translate_y_0_to_n1_time_200</item>
    </style>

    <!--Dialog顶部进入动画时间为400毫秒-->
    <style name="DialogAnimationTopInTime400" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_y_n1_to_0_time_400</item>
        <item name="android:windowExitAnimation">@anim/translate_y_0_to_n1_time_400</item>
    </style>
    <!--Dialog顶部进入动画时间为600毫秒-->
    <style name="DialogAnimationTopInTime600" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_y_n1_to_0_time_600</item>
        <item name="android:windowExitAnimation">@anim/translate_y_0_to_n1_time_600</item>
    </style>

    <!--Dialog底部进入动画时间为200毫秒-->
    <style name="DialogAnimationBottomInTime200" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_y_1_to_0_time_200</item>
        <item name="android:windowExitAnimation">@anim/translate_y_0_to_1_time_200</item>
    </style>
    <!--Dialog底部进入动画时间为400毫秒-->
    <style name="DialogAnimationBottomInTime400" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_y_1_to_0_time_400</item>
        <item name="android:windowExitAnimation">@anim/translate_y_0_to_1_time_400</item>
    </style>
    <!--Dialog底部进入动画时间为600毫秒-->
    <style name="DialogAnimationBottomInTime600" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_y_1_to_0_time_600</item>
        <item name="android:windowExitAnimation">@anim/translate_y_0_to_1_time_600</item>
    </style>

    <!--APP通用dialog样式-->
    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/common_theme</item>
        <item name="colorPrimaryDark">@color/common_black</item>
        <item name="colorAccent">@color/common_theme_auxiliary</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 全局Dialog样式 -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>