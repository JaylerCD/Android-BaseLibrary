<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="25dp"
            android:paddingStart="25dp" android:text="取消"
            android:textColor="@color/common_font_two"
            android:textSize="@dimen/common_font_one" />

        <TextView
            android:id="@+id/tvOk"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingEnd="25dp" android:paddingRight="25dp"
            android:text="确定"
            android:textColor="@color/common_font_one"
            android:textSize="@dimen/common_font_one" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="horizontal">

        <com.jl.baselibrary.widget.dialog.wheel.WheelView
            android:id="@+id/wheelFirst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.jl.baselibrary.widget.dialog.wheel.WheelView
            android:id="@+id/wheelSecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.jl.baselibrary.widget.dialog.wheel.WheelView
            android:id="@+id/wheelThird"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>